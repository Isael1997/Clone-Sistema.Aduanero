@model Sistema_Aduanero.Models.Empleados;

@{
    ViewData["Title"] = "LoginEmpleado";
}


<div class="row contedor_titulos_login_y_registro">
    <div class="col-md-6">
        <h2 class="">Login del Empleado</h2>
    </div>

</div>
<div class="row">
    <form asp-action="../Perfiles/PerfilEmploy" class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <label for="correo">Usuario:</label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label for="pass">Contraseña:</label>
                <input asp-for="Contraseña" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
        </div>

        <div class="row formulario_login">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success btn-block btn_iniciar_sesion">
                    Enviar <span class="glyphicon glyphicon-send"></span>
                </button>
            </div>
            <div class="col-md-4 col-md-offset-4">
                <a href="#" class="text-danger">Olvide mi contraseña</a>
            </div>
        </div>
    </form>
    
</div>